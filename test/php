<?php

namespace x\minify;

use Test\Test\{
    Test,
    Test\Test,
    Test\Test as Test
};

function css(?string $in) {
    return \trim($in);
}

$var0 = [ 1 , 2 , 3 ] ; // comment
$var1 = [ 1 , 2 , 3 ];

$var0 = [ 1 , 2 , 3 ] ; # comment
$var1 = [ 1 , 2 , 3 ];

$var0 = [ 1 , 2 , 3 ] ; /* comment */
$var1 = [ 1 , 2 , 3 ];

#[Test(1, 2, 3)]
class Test {
    #[Test(1, 2, 3)]
    public $test;
    #[Test(1, 2, 3)]
    #[Test(1, 2, 3)]
    public function __construct(int $test) {
        $this->test = $test;
    }
}

// Remove trailing `,` in array
$foo = [
    1,
    2,
    3,
];

// Remove trailing `,` in function call
echo bar(
    1,
    2,
    3,
);

// Remove trailing `,` in namespace group
use foo\bar\{
    test\foo,
    test\bar,
    test\baz,
};

// Test named argument(s)
baz(qux: 5);

// Do not collapse `function` to `_` so that they become `function_`
function _() {
    // Test!
}

// Do not collapse `const` to `_` so that they become `const_`
const _ = 1;

// Do not collapse `const` to `$` so that they become `const$`
const $_ = 1;

// Remove white-space around type cast
$int = (int) '123';
$int = (  int  ) 123;

// The `(unset)` type cast is removed in PHP 8.0.0
$unset = (unset) 1;
$unset = (  unset  ) 1;

// Invalid type cast should be handled by generic white-space remover around punctuation
$test = ( asdf ) 1;

// Minify number(s)
$numbers = [ 123, 123.00, 123.0, 0.123, .123 ];

return [ 1 , 2 , 3 ];

return false;

return null;

return true;

return 0;

return 1;

return 0.5;

return .5;

return -0;

return -1;

return -0.5;

return -.5;

return new Foo;

return foo();

return foo;

return $foo;

return ++123;

return --123;

return (array) $foo;

return ( 2 + $foo );

return ! $foo;

switch ($foo) {
    case 1:
    case -1 :
        $bar = 1;
        break;
    case [] :
        $bar = [ 1 , 2 , 3 ];
        break;
    default: 0;
}

echo -1;

print ( 123 + $foo );

include ( __DIR__ . '/' . $foo . '.php' );

?>

